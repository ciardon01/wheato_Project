<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="#AABBCC">


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_launcher_background"
            android:background="#CCEEFF"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <HorizontalScrollView
            android:layout_width="409dp"
            android:layout_height="154dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        android:background="#AED581"
                        android:outlineSpotShadowColor="@color/colorAccent"/>

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        android:background="#FFAED581"/>

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        android:background="#FFAED581"/>

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_margin="3dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        android:background="#FFAED581"/>

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_margin="3dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        android:background="#FFAED581"/>

                    <ImageView
                        android:id="@+id/imageVie5"
                        android:layout_margin="3dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        android:background="#FFAED581"/>

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_margin="3dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        android:background="#FFAED581"/>

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_margin="3dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        android:background="#FFAED581"/>

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_margin="3dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        android:background="#FFAED581"/>

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_margin="3dp"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        android:background="#FFAED581"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewA"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        android:background="#FFAED581"/>

                    <ImageView
                        android:id="@+id/imageViewA1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        android:background="#FFAED581"/>

                    <ImageView
                        android:id="@+id/imageViewA2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        android:background="#FFAED581"/>

                    <ImageView
                        android:id="@+id/imageViewA3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        android:background="#FFAED581"/>

                    <ImageView
                        android:id="@+id/imageViewA4"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        android:background="#FFAED581"/>

                    <ImageView
                        android:id="@+id/imageVieA5"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        android:background="#FFAED581"/>

                    <ImageView
                        android:id="@+id/imageViewA6"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        android:background="#FFAED581"/>

                    <ImageView
                        android:id="@+id/imageViewA7"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        android:background="#FFAED581"/>

                    <ImageView
                        android:id="@+id/imageViewA8"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        android:background="#FFAED581"/>

                    <ImageView
                        android:id="@+id/imageViewA9"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:layout_margin="3dp"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        android:background="#FFAED581"/>

                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </androidx.recyclerview.widget.RecyclerView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>